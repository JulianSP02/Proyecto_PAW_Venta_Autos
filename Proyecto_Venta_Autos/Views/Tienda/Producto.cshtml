@model Proyecto_Venta_Autos.Models.Producto
@{
    ViewBag.Title = "Auto";
    Layout = "~/Views/Shared/_Layout_Tienda.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="data:image/@Html.DisplayFor(model => model.extension);base64,@Html.DisplayFor(model => model.base64)" alt="..."></div>
            <div class="col-md-6">
                <div class="small mb-1">@Html.DisplayFor(model => model.oMarca.Descripcion)</div>
                <h1 class="display-5 fw-bolder">@Html.DisplayFor(model => model.Nombre)</h1>
                <div class="fs-5 mb-5">
                    <span>S/. @Html.DisplayFor(model => model.Precio)</span>
                </div>
                <p class="lead">@Html.DisplayFor(model => model.Descripcion)</p>
                <div class="d-flex">
                    <a href="@Url.Action("Index", "Tienda")" class="btn btn-danger w-50 text-center me-3">
                        <i class="fas fa-undo-alt"></i> Volver
                    </a>
                    @if (ViewContext.HttpContext.Request.Cookies["UsuarioAutenticado"] != null && ViewContext.HttpContext.Request.Cookies["UsuarioAutenticado"] == "true")
                    {
                        <button class="btn btn-success btn-agregar-carrito flex-shrink-0 w-50 " type="button" data-idproducto="@Html.DisplayFor(model => model.IdProducto)">
                            <i class="fas fa-cart-plus"></i> Agregar al carrito
                        </button>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {


}
